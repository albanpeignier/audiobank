#!/bin/bash -e

input=$1
output=$2
format=$3
quality=0

[ -r $input ] || exit 1

sox=/usr/bin/sox
oggenc=/usr/bin/oggenc
flac=/usr/bin/flac
mpg321=/usr/bin/mpg321 
lame=/usr/bin/lame

[ -x $sox ] || exit 1
[ -x $oggenc ] || exit 1
[ -x $flac ] || exit 1
[ -x $mpg321 ] || exit 1

input_type=`file -bi $input`
case $input_type in 
	audio/mpeg)
		function play() {
			$mpg321 -q --stereo -w - $1
		}
	;;
	application/ogg)
		function play() {
			$sox -t ogg $1 -t wav -c 2 -
		}
	;;
	audio/x-flac)
		function play() {
			$flac --silent --decode --stdout $1
		}
	;;
	*)
		exit 1
	;;
esac

play $input | $oggenc -Q --downmix -q$quality -o $output -
