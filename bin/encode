#!/bin/bash -e

input=$1
output=$2
format=$3
quality=2

[ -r "$input" ] || exit 1

sox=/usr/bin/sox
oggenc=/usr/bin/oggenc
flac=/usr/bin/flac
mpg321=/usr/bin/mpg321 
lame=/usr/bin/lame

[ -x $sox ] || exit 1
[ -x $oggenc ] || exit 1
[ -x $flac ] || exit 1
[ -x $mpg321 ] || exit 1
[ -x $lame ] || exit 1

input_type=`file -bi "$input"`
case $input_type in 
	audio/mpeg)
		function play() {
			$mpg321 -q --stereo -w - "$1"
		}
	;;
	application/ogg)
		function play() {
			$sox -t ogg "$1" -t wav -c 2 -
		}
	;;
	audio/x-flac)
		function play() {
			$flac --silent --decode --stdout "$1"
		}
	;;
	*)
		exit 1
	;;
esac

case $format in
	ogg)
		function encode() {
			$oggenc -Q -q$1 -o "$2" -
		}
	;;
	mp3)
		function encode() {
			lame_quality=$[9-$1]
			$lame --silent -m s -q$lame_quality - "$2"
		}
	;;
	*)
		exit 1
	;;
esac

play "$input" | encode $quality "$output"
