<h2>Vos documents portant l'étiquette : <%= params[:name] %></h2>
<ul>
 <%= render :partial => "documents/documents", :object => @document, :locals => { :linked => true, :empty => "Aucun document correspondant n'a été trouvé ...", :actions => true, :tags => true } %>
</ul>
<div class="actions">
 <%= link_to("Précédents", { :page => @pages.current.previous }, :class => "previous") if @pages.current.previous %>
 <%= link_to("Suivants", { :page => @pages.current.next }, :class => "next") if @pages.current.next %> 
</div>
